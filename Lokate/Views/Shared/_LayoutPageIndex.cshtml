<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width, initial-scale=1"/>
    <title>@ViewBag.Title</title>
    <link rel="stylesheet" href="https://www.w3schools.com/w3css/4/w3.css">
    <link rel="stylesheet" href="https://fonts.googleapis.com/css?family=Lato">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">

    <link rel="stylesheet" href="https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0-beta/css/bootstrap.min.css" integrity="sha384-/Y6pD6FV/Vv2HJnA6t+vslU6fwYXjCFtcEpHbNJ0lyAFsXTsjBbfaDjzALeQsN6M" crossorigin="anonymous">
   
    <script src="https://cdnjs.cloudflare.com/ajax/libs/semantic-ui/2.2.13/components/dropdown.min.js"></script>

    @RenderSection("head",false)
    <style>
        body {
            font-family: "Times New Roman", Georgia, Serif;
        }

        h1, h2, h3, h4, h5, h6 {
            font-family: "Playfair Display";
            letter-spacing: 5px;
        }

        a:hover {
            text-decoration: none;
        }
    </style>
</head>
<body>
    <div>
        
        <!-- Navbar (sit on top) -->
        <div class="w3-top">
            <div class="w3-bar w3-white w3-padding w3-card-2" style="letter-spacing:4px;">
                @Html.ActionLink("Lokate", "Index", "Home", null,new { @Class = "w3-bar-item w3-button"})
                <!-- Right-sided navbar links. Hide them on small screens -->
                <div class="w3-right w3-hide-small">
                    @Html.ActionLink("About", "About", "Home", null, new { @Class = "w3-bar-item w3-button" })
                    @Html.ActionLink("Contact", "Contact", "Home", null, new { @Class = "w3-bar-item w3-button" })
                </div>
            </div>
        </div>
        <header class="w3-display-container w3-content w3-wide" style="max-width:1600px;min-width:500px" id="home">
            <img class="w3-image" src="~/Content/Logo/Lokate.png" alt="Lokate" width="500" height="400">
            @RenderBody()
        </header>
        <br />
        <!-- Footer -->
        @*<footer class="w3-center w3-light-grey w3-padding-32">
            <p>Powered by <a href="https://www.w3schools.com/w3css/default.asp" title="W3.CSS" target="_blank" class="w3-hover-text-green">Codist</a></p>
        </footer>*@
        </div>
</body>
</html>
