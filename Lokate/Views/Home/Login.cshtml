@model Lokate.Models.Login

@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LayoutPageIndex.cshtml";
}



@using (Html.BeginForm())
{
    <div class="form-group" style="width:19em; margin:0 auto ">
            <h4 style="text-align:center">Login Form</h4>
        <hr />
        <div class="">
            <div class="form-group">
                @Html.LabelFor(model => model.AdminEmail, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.TextBoxFor(model => model.AdminEmail, new { htmlAttributes = new { @class = "form-control col-md-5" } })
                    @Html.ValidationMessageFor(model => model.AdminEmail)

                </div>
            </div>
            <div class="form-group">
                @Html.LabelFor(model => model.AdminPassword, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-12">
                    @Html.PasswordFor(model => model.AdminPassword, new { htmlAttributes = new { @class = "form-control col-md-6" } })
                    @Html.ValidationMessageFor(model => model.AdminPassword)

                </div>
            </div>
            <div class="form-group col-md-12">
                <input type="submit" value="Sign In" class="btn btn-outline-success col-md-5" /> 
                @Html.ActionLink("Cancel", "Index",null,new { @class = "btn btn-outline-danger col-md-5" })
                
            </div>
        </div>
           
            @Html.ValidationSummary(true)
       
    </div>
}